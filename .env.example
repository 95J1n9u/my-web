# NetSecure 다중 지침서 분석기 환경 변수 설정

# ===========================================
# API 서버 설정
# ===========================================

# 분석 API 서버 기본 URL (포트 5000으로 변경됨)
REACT_APP_API_BASE_URL=http://localhost:5000/api/v1

# API 요청 타임아웃 (밀리초)
REACT_APP_API_TIMEOUT=300000

# API 재시도 횟수
REACT_APP_API_RETRY_COUNT=3

# ===========================================
# 애플리케이션 정보
# ===========================================

# 서비스 이름
REACT_APP_SERVICE_NAME=NetSecure Multi-Framework Analyzer

# 애플리케이션 버전
REACT_APP_VERSION=2.0.0

# 빌드 환경 (development, staging, production)
REACT_APP_BUILD_ENV=development

# ===========================================
# 지침서 설정
# ===========================================

# 기본 지침서 (KISA, CIS, NW, NIST)
REACT_APP_DEFAULT_FRAMEWORK=KISA

# 활성화된 지침서 (쉼표로 구분)
REACT_APP_ENABLED_FRAMEWORKS=KISA,CIS,NW

# 실험적 지침서 지원 (true/false)
REACT_APP_EXPERIMENTAL_FRAMEWORKS=false

# ===========================================
# 파일 업로드 설정
# ===========================================

# 최대 파일 크기 (바이트 단위, 기본 50MB)
REACT_APP_MAX_FILE_SIZE=52428800

# 지원 파일 확장자 (쉼표로 구분)
REACT_APP_SUPPORTED_EXTENSIONS=.txt,.cfg,.conf,.xml,.log

# 업로드 청크 크기 (바이트 단위, 기본 1MB)
REACT_APP_UPLOAD_CHUNK_SIZE=1048576

# ===========================================
# UI/UX 설정
# ===========================================

# 테마 모드 (light, dark, auto)
REACT_APP_THEME_MODE=light

# 기본 언어 (ko, en)
REACT_APP_DEFAULT_LANGUAGE=ko

# 애니메이션 활성화 (true/false)
REACT_APP_ENABLE_ANIMATIONS=true

# 자동 새로고침 간격 (초 단위, 0은 비활성화)
REACT_APP_AUTO_REFRESH_INTERVAL=0

# ===========================================
# 분석 설정
# ===========================================

# 기본 분석 모드 (single, comparison)
REACT_APP_DEFAULT_ANALYSIS_MODE=single

# 자동 분석 시작 (true/false)
REACT_APP_AUTO_START_ANALYSIS=false

# 분석 결과 캐시 활성화 (true/false)
REACT_APP_ENABLE_RESULT_CACHE=true

# 결과 캐시 유효 시간 (밀리초, 기본 1시간)
REACT_APP_RESULT_CACHE_TTL=3600000

# ===========================================
# 보안 설정
# ===========================================

# HTTPS 강제 사용 (true/false)
REACT_APP_FORCE_HTTPS=false

# CSP (Content Security Policy) 활성화
REACT_APP_ENABLE_CSP=true

# 파일 업로드 시 바이러스 스캔 (true/false)
REACT_APP_ENABLE_VIRUS_SCAN=false

# ===========================================
# 로깅 및 모니터링
# ===========================================

# 로그 레벨 (debug, info, warn, error)
REACT_APP_LOG_LEVEL=info

# 분석 통계 수집 (true/false)
REACT_APP_COLLECT_ANALYTICS=false

# 성능 모니터링 (true/false)
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# 오류 리포팅 서비스 URL
REACT_APP_ERROR_REPORTING_URL=

# ===========================================
# 개발 도구 설정
# ===========================================

# React DevTools 활성화 (development 환경에서만)
REACT_APP_ENABLE_DEVTOOLS=true

# 소스맵 생성 (true/false)
GENERATE_SOURCEMAP=true

# 번들 분석기 활성화 (true/false)
REACT_APP_ENABLE_BUNDLE_ANALYZER=false

# ===========================================
# 기능 플래그
# ===========================================

# 다중 지침서 비교 기능 (true/false)
REACT_APP_ENABLE_MULTI_FRAMEWORK_COMPARISON=true

# 실시간 라인 분석 (true/false)
REACT_APP_ENABLE_REAL_TIME_LINE_ANALYSIS=false

# 보고서 내보내기 기능 (true/false)
REACT_APP_ENABLE_REPORT_EXPORT=true

# PDF 보고서 생성 (true/false)
REACT_APP_ENABLE_PDF_EXPORT=false

# Excel 보고서 생성 (true/false)
REACT_APP_ENABLE_EXCEL_EXPORT=false

# 사용자 정의 룰 생성 (true/false)
REACT_APP_ENABLE_CUSTOM_RULES=false

# ===========================================
# 외부 서비스 연동
# ===========================================

# Google Analytics 추적 ID
REACT_APP_GA_TRACKING_ID=

# Sentry DSN (오류 모니터링)
REACT_APP_SENTRY_DSN=

# Mixpanel 프로젝트 토큰 (사용자 분석)
REACT_APP_MIXPANEL_TOKEN=

# ===========================================
# 지역화 설정
# ===========================================

# 시간대 (Asia/Seoul, UTC 등)
REACT_APP_TIMEZONE=Asia/Seoul

# 통화 형식 (KRW, USD 등)
REACT_APP_CURRENCY=KRW

# 날짜 형식 (YYYY-MM-DD, MM/DD/YYYY 등)
REACT_APP_DATE_FORMAT=YYYY-MM-DD

# ===========================================
# 성능 최적화
# ===========================================

# 코드 스플리팅 활성화 (true/false)
REACT_APP_ENABLE_CODE_SPLITTING=true

# 서비스 워커 활성화 (true/false)
REACT_APP_ENABLE_SERVICE_WORKER=false

# 프리로딩 전략 (none, prefetch, preload)
REACT_APP_PRELOADING_STRATEGY=prefetch

# 이미지 최적화 (true/false)
REACT_APP_OPTIMIZE_IMAGES=true

# ===========================================
# 개발 전용 설정
# ===========================================

# Mock API 사용 (개발 환경에서만)
REACT_APP_USE_MOCK_API=false

# 개발 서버 포트
PORT=3000

# 개발 서버 호스트
HOST=localhost

# Hot Reload 활성화
FAST_REFRESH=true

# ===========================================
# 프로덕션 설정
# ===========================================

# 빌드 최적화 레벨 (1-3)
REACT_APP_BUILD_OPTIMIZATION_LEVEL=3

# 압축 활성화 (true/false)
REACT_APP_ENABLE_COMPRESSION=true

# CDN 사용 (true/false)
REACT_APP_USE_CDN=false

# CDN 기본 URL
REACT_APP_CDN_BASE_URL=

# ===========================================
# 백업 및 복구
# ===========================================

# 자동 설정 백업 (true/false)
REACT_APP_AUTO_BACKUP_SETTINGS=false

# 백업 저장소 타입 (local, cloud)
REACT_APP_BACKUP_STORAGE_TYPE=local

# 백업 보관 기간 (일 단위)
REACT_APP_BACKUP_RETENTION_DAYS=30

# ===========================================
# 사용 예시
# ===========================================

# 로컬 개발 환경
# REACT_APP_API_BASE_URL=http://localhost:5000/api/v1
# REACT_APP_BUILD_ENV=development
# REACT_APP_LOG_LEVEL=debug

# 스테이징 환경
# REACT_APP_API_BASE_URL=https://staging-api.netsecure.com/api/v1
# REACT_APP_BUILD_ENV=staging
# REACT_APP_LOG_LEVEL=info

# 프로덕션 환경
# REACT_APP_API_BASE_URL=https://api.netsecure.com/api/v1
# REACT_APP_BUILD_ENV=production
# REACT_APP_LOG_LEVEL=error
# REACT_APP_ENABLE_COMPRESSION=true