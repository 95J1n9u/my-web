{
  "name": "netsecure-analyzer",
  "version": "2.0.0",
  "description": "다중 보안 지침서 기반 네트워크 장비 설정 분석 도구",
  "keywords": [
    "network-security",
    "vulnerability-analysis",
    "kisa",
    "cis",
    "nw",
    "nist",
    "cisco",
    "juniper",
    "security-framework",
    "multi-framework",
    "config-analysis"
  ],
  "author": {
    "name": "NetSecure Team",
    "email": "security@example.com",
    "url": "https://github.com/your-org/netsecure-analyzer"
  },
  "license": "MIT",
  "homepage": "https://netsecure-analyzer.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/netsecure-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/netsecure-analyzer/issues"
  },
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.11.1",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.13.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.12.7",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash": "^4.17.12",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.5.3",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "cross-env CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{js,jsx,ts,tsx}",
    "prettier": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "prettier:check": "prettier --check src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:analyze": "cross-env REACT_APP_ENABLE_BUNDLE_ANALYZER=true npm run build",
    "build:staging": "cross-env REACT_APP_BUILD_ENV=staging npm run build",
    "build:production": "cross-env REACT_APP_BUILD_ENV=production npm run build",
    "serve": "npx serve -s build -l 3000",
    "clean": "rm -rf build node_modules/.cache",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "health-check": "curl -f http://localhost:3000 || exit 1",
    "pre-commit": "npm run lint:check && npm run prettier:check && npm run test:ci",
    "docker:build": "docker build -t netsecure-analyzer .",
    "docker:run": "docker run -p 3000:3000 netsecure-analyzer",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "size:check": "npm run build && bundlesize"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundlesize": [
    {
      "path": "./build/static/js/*.js",
      "maxSize": "300kb"
    },
    {
      "path": "./build/static/css/*.css",
      "maxSize": "50kb"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
